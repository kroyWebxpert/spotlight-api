{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.3.*",
        "laravel-doctrine/orm": "1.2.*",
        "doctrine/orm": " 2.5.*",
        "illuminate/auth" : "5.2.*|5.3.*",
        "illuminate/console" : "5.2.*|5.3.*",
        "illuminate/container" : "5.2.*|5.3.*",
        "illuminate/contracts" : "5.2.*|5.3.*",
        "illuminate/pagination" : "5.2.*|5.3.*",
        "illuminate/support": "5.2.*|5.3.*",
        "illuminate/validation" : "5.2.*|5.3.*",
        "illuminate/view": "5.2.*|5.3.*",
        "symfony/serializer": "^2.7",
        "doctrine/dbal": "^2.5",
        "symfony/finder": "^3.1",
        "illuminate/html": "^5.0",
        "laravelcollective/html": "^5.3.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/console": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Spotlight\\": "src/spotlight/Modules/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
